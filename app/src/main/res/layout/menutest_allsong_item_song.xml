<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin_base"
    android:id="@+id/item_layout">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_img"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="@+id/item_layout"
        app:layout_constraintLeft_toLeftOf="@+id/item_layout"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_basex2"
        app:layout_constraintBottom_toBottomOf="@+id/item_img"
        app:layout_constraintLeft_toLeftOf="@+id/item_img"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="#55000000"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:freezesText="true"
        android:scrollHorizontally="true"
        tools:ignore="RtlSymmetry" />
</androidx.constraintlayout.widget.ConstraintLayout>